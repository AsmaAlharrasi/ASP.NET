
@model List<Appointment>


<h2> Appointment List </h2>
<div class="row   mt-4 w-75">


    <form class="d-flex justify-content-center align-items-center" asp-action="Index">
        <input type="text" name="search" class="form-control  " placeholder="Enter Search Value" />
        <input type="submit" value="Search" class="btn btn-success " />
    </form>


</div>



@if (Model.Count() > 0)
{

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td> Day </td>
                <td> Time </td>
                <td> Appointment Status </td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td> @item.Appointment_Day </td>
                    <td> @item.Appointment_Time </td>
                    <td> @item.Appointment_Status </td>
                    

                    <td>
                       <a asp-action="Update" asp-controller="Doctor" asp-route-id="@item.AppointmentID" class="btn btn-dark"> Update</a>
                        <a asp-action="Delete" asp-controller="Doctor" asp-route-id="@item.AppointmentID" class="btn btn-danger"> Delete</a>

                    </td>
                   

                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="card bg-dark text-light">
        <h2>  Appointment Available </h2>
    </div>
}



