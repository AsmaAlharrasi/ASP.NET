@model List<Appointment>
@{
    var User = new string(ViewBag.LoggedInUserName);

}

<h2> Appointment List </h2>
<div class="row   mt-4 w-75">

    <div class="text-center">
        <h3 class="form-control" >welcome @ViewBag.LoggedInUserName</h3>
    </div>

</div>
<div>
    <a asp-action="Create" asp-controller="Appointment" class="btn btn-dark"> Book Appoinyemnt</a>
</div>

@if (Model.Count() > 0)
{

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td> Appointment_Day </td>
                <td> Appointment_Time </td>
                <td> Appointment_Status </td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td> @item.Appointment_Day </td>
                    <td> @item.Appointment_Time </td>
                    <td> @item.Appointment_Status </td>

                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="card bg-danger text-light">
        <h2> No Appointment Available </h2>
    </div>
}



